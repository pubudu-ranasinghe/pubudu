---
import Header from "../components/Header.astro";
import Layout from "./Layout.astro";

export interface Props {
  title: string;
  description: string;
  publishDate: Date;
  tags?: string[];
}

const { title, description, publishDate, tags } = Astro.props;

// Generate keywords from tags if available
const keywords =
  tags?.join(", ") || "blog, software engineering, web development";
---

<Layout
  title={`${title} - Pubudu Ranasinghe`}
  description={description}
  keywords={keywords}
  type="article"
  publishDate={publishDate}
>
  <div class="container">
    <Header compact />
  </div>
  <article class="container pt-10 pb-20">
    <header class="">
      <h1>{title}</h1>
    </header>
    <div class="blog-content">
      <slot />
    </div>
  </article>
</Layout>

<style>
  .back-link:hover {
    color: var(--color-text-emphasis);
  }

  h1 {
    font-size: var(--font-size-2);
    font-weight: var(--font-weight-medium);
    color: var(--color-text-emphasis);
    line-height: 1.2;
    margin: 0 0 24px 0;
    max-width: var(--max-width-content);
  }

  .blog-content {
    /* max-width: var(--max-width-content); */
  }

  .blog-content :global(h2) {
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-medium);
    color: var(--color-text-emphasis);
    margin: 48px 0 16px 0;
    line-height: 1.3;
  }

  .blog-content :global(h3) {
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-medium);
    color: var(--color-text-secondary);
    margin: 32px 0 12px 0;
    line-height: 1.4;
  }

  .blog-content :global(p) {
    margin-bottom: 16px;
    text-wrap: pretty;
  }

  .blog-content :global(a) {
    text-decoration-line: underline;
    text-underline-offset: 0.15em;
  }

  .blog-content :global(ul),
  .blog-content :global(ol) {
    margin: 16px 0;
    padding-left: 24px;
    color: var(--color-text-primary);
  }

  .blog-content :global(li) {
    margin-bottom: 8px;
  }

  .blog-content :global(code) {
    background: oklch(95% 0.005 58.071);
    color: var(--color-text-emphasis);
    padding: 2px 6px;
    border-radius: 3px;
    font-size: 0.9em;
    font-family:
      "SF Mono", Monaco, "Cascadia Code", "Roboto Mono", Consolas,
      "Courier New", monospace;
  }

  .blog-content :global(pre) {
    padding: 16px;
    overflow-x: auto;
  }

  .blog-content :global(pre code) {
    background: none;
    padding: 0;
    font-size: 14px;
    line-height: 1.6;
  }

  .blog-content :global(blockquote) {
    padding: 16px;
    margin: 24px 0;
    border-radius: var(--border-radius-base);
    color: var(--color-text-secondary);
    font-style: italic;
    background-color: var(--color-surface);
  }

  .blog-content :global(blockquote p) {
    margin: 0;
  }

  .blog-content :global(blockquote span) {
    display: block;
    margin-top: 4px;
  }

  .blog-content :global(strong) {
    font-weight: var(--font-weight-medium);
    color: var(--color-text-emphasis);
  }
</style>
