---
import { getCollection, type CollectionEntry } from "astro:content";

type BlogEntry = CollectionEntry<"blog">;

// Fetch published blog posts, sorted by date (newest first)
const posts = await getCollection("blog", ({ data }: BlogEntry) => {
  return data.draft !== true;
});

const sortedPosts = posts.sort(
  (a: BlogEntry, b: BlogEntry) =>
    b.data.publishDate.getTime() - a.data.publishDate.getTime(),
);
---

<section class="container pb-20">
  <h2 class="mb-8 leading-7 font-medium text-stone-700 dark:text-amber-400">
    Writing
  </h2>
  <ul class="m-0 list-none p-0">
    {
      sortedPosts.map((post: BlogEntry) => (
        <li class="mb-4 last:mb-0">
          <a
            href={`/${post.slug}`}
            class="leading-7 text-stone-500 no-underline transition duration-200 ease-in-out hover:text-stone-800 dark:text-stone-50 dark:hover:text-stone-400"
          >
            {post.data.title}
          </a>
        </li>
      ))
    }
  </ul>
</section>
