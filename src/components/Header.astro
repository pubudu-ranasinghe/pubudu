---
import Logo from "./Logo.astro";

export interface Props {
  name?: string;
  title?: string;
  compact?: boolean;
}

const {
  name = "Pubudu Ranasinghe",
  title = "Software Engineer",
  compact = false,
} = Astro.props;
---

<header class="flex flex-col justify-center items-start gap-4 pb-12 pt-20">
  {!compact && <Logo height={25} />}
  <h1 class="text-base font-medium text-stone-700 leading-7">
    <a class="no-underline" href="/">{name}</a>
    <div class="text-stone-500 font-normal">{title}</div>
  </h1>
</header>
