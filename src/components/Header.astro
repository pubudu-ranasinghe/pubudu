---
import Logo from "./Logo.astro";

export interface Props {
  name?: string;
  title?: string;
  compact?: boolean;
}

const {
  name = "Pubudu Ranasinghe",
  title = "Software Engineer",
  compact = false,
} = Astro.props;
---

<header class="flex flex-col items-start justify-center gap-4 pt-20 pb-12">
  {!compact && <Logo height={25} />}
  <h1
    class="text-base leading-7 font-medium text-stone-700 dark:text-amber-400"
  >
    <a class="no-underline" href="/">{name}</a>
    {
      !compact && (
        <div class="font-normal text-stone-500 dark:text-stone-200">
          {title}
        </div>
      )
    }
  </h1>
</header>
