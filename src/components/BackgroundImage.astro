---
import { Image } from "astro:assets";
import background from "../assets/0030_small.png";

export interface Props {
  imageAlt?: string;
}

const { imageAlt = "Just a background image" } = Astro.props;
---

<aside class="relative overflow-hidden" style="height: var(--image-height)">
  <Image
    src={background}
    alt={imageAlt}
    loading="eager"
    decoding="sync"
    quality={95}
    class="h-full w-full object-cover object-[50%_30%]"
  />
  <div
    class="noise-overlay absolute inset-0 h-full w-full opacity-40 mix-blend-screen"
  >
  </div>
</aside>

<style>
  .noise-overlay {
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 600 600' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.69' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.6'/%3E%3C/svg%3E");
  }
</style>
