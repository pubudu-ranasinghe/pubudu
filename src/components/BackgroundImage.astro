---
import { Image } from "astro:assets";
import background from "../assets/0030_small.png";

export interface Props {
  imageAlt?: string;
}

const { imageAlt = "Just a background image" } = Astro.props;
---

<aside class="background-image">
  <Image
    src={background}
    alt={imageAlt}
    loading="eager"
    decoding="sync"
    quality={95}
  />
  <div class="noise-overlay"></div>
</aside>

<style>
  .background-image {
    height: var(--image-height);
    overflow: hidden;
    position: relative;
  }

  .background-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: 50% 30%;
  }

  .noise-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 600 600' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.69' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.6'/%3E%3C/svg%3E");
    mix-blend-mode: screen;
    opacity: 0.4;
    pointer-events: none;
  }
</style>
