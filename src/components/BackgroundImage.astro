---
import { Image } from "astro:assets";
import background from "../assets/0030_small.png";

export interface Props {
  imageAlt?: string;
}

const { imageAlt = "Just a background image" } = Astro.props;
---

<aside class="background-image">
  <Image
    src={background}
    alt={imageAlt}
    loading="eager"
    decoding="sync"
    quality={95}
  />
</aside>

<style>
  .background-image {
    height: var(--image-height);
    overflow: hidden;
  }

  .background-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: 50% 10%;
  }
</style>
